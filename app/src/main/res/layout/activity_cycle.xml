<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackground"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- ЗАГОЛОВОК -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_cycle_settings"
        android:textColor="?attr/mainTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- НЕ ВИМИКАТИ ЦИКЛ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_keep_cycle"
            android:textColor="?attr/mainTextColor"
            android:textSize="14sp"/>

        <Switch
            android:id="@+id/switchKeepCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_round"
            android:track="@drawable/track_neon"
            />
    </LinearLayout>

    <!-- ІНТЕРВАЛ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_interval"
            android:textColor="?attr/mainTextColor"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerInterval"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_panel"
            android:padding="5dp"/>
    </LinearLayout>

    <!-- ЗАГАЛЬНА ЯСКРАВІСТЬ (Опціонально) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_brightness"
        android:textColor="?attr/mainTextColor"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <SeekBar
        android:id="@+id/seekBarGlobalBri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="100"
        android:progressTint="?attr/accentColor"
        android:thumbTint="?attr/mainTextColor"
        android:layout_marginBottom="20dp"/>

    <!-- КНОПКА ВИБРАТИ ВСЕ -->
    <Button
        android:id="@+id/btnSelectAll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/btn_select_all"
        android:backgroundTint="?attr/panelColor"
        android:textColor="?attr/accentColor"
        android:layout_marginBottom="10dp"/>

    <!-- СПИСОК (Займає решту місця) -->
    <ListView
        android:id="@+id/listCycleEffects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

    <!-- НАЗАД -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/btn_back"
        android:backgroundTint="?attr/panelColor"
        android:textColor="?attr/mainTextColor"
        android:layout_gravity="center"/>

</LinearLayout>