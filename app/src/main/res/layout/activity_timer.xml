<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ЗАГОЛОВОК -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_sleep_timer"
            android:textColor="?attr/mainTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp"/>

        <!-- ВИБІР ЧАСУ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_turn_off_in"
                android:textColor="?attr/mainTextColor"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerTimer"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_panel"
                android:padding="5dp"/>
        </LinearLayout>

        <!-- ВІДЛІК ЧАСУ (Countdown) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_countdown"
            android:textColor="?attr/mainTextColor"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textCountdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="48sp"
            android:textColor="?attr/accentColor"
            android:gravity="end"
            android:fontFamily="monospace"
            android:layout_marginBottom="30dp"/>

        <!-- ЧАС В ЛАМПІ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_lamp_time"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="?attr/mainTextColor"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- КНОПКА НАЗАД -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/btn_back"
            android:backgroundTint="?attr/panelColor"
            android:textColor="?attr/mainTextColor"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>