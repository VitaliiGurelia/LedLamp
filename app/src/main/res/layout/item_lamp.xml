<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="@drawable/bg_panel"
    android:backgroundTint="?attr/panelColor"
    android:layout_marginBottom="5dp">

    <!-- Інформація про лампу (Зліва) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Текст тут лише для прев'ю, він заміниться програмно -->
        <TextView
            android:id="@+id/itemLampName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва Лампи"
            android:textColor="?attr/mainTextColor"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/itemLampIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.0.100"
            android:textColor="?attr/subTextColor"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- КНОПКИ ДІЙ (Справа) -->

    <!-- 1. Перевірити зв'язок (ЗЕЛЕНИЙ) -->
    <ImageButton
        android:id="@+id/btnItemCheck"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_check"
        app:tint="?attr/accentColor"
        android:padding="8dp"/>

    <!-- 2. Скинути Wi-Fi (ЧЕРВОНИЙ - Небезпечно) -->
    <ImageButton
        android:id="@+id/btnItemWifiReset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_wifi_reset"
        app:tint="?attr/dangerColor"
        android:padding="8dp"
        android:layout_marginStart="5dp"/>

    <!-- 3. Видалити зі списку (КОЛІР ТЕКСТУ) -->
    <ImageButton
        android:id="@+id/btnItemDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete"
        app:tint="?attr/mainTextColor"
        android:padding="8dp"
        android:layout_marginStart="5dp"/>

</LinearLayout>