<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="@drawable/bg_panel"
    android:backgroundTint="?attr/panelColor"
    android:layout_marginBottom="5dp">

    <!-- Інформація про лампу -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemLampName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Назва Лампи"
            android:textColor="?attr/mainTextColor"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/itemLampIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="192.168.0.100"
            android:textColor="?attr/subTextColor"
            android:textSize="11sp"/>
    </LinearLayout>

    <!-- 1. ПЕРЕВІРКА (ЗЕЛЕНА) -->
    <ImageButton
        android:id="@+id/btnItemCheck"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_check"
        android:contentDescription="@string/btn_check_connection"
        app:tint="?attr/accentColor"
        android:padding="6dp"/>

    <!-- 2. ЗАВОДСЬКЕ СКИДАННЯ (ЖОВТА/ПОМАРАНЧЕВА) -->
    <ImageButton
        android:id="@+id/btnItemFactoryReset"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_wifi_reset"
        android:contentDescription="@string/dialog_factory_reset_title"
        app:tint="#FF9800"
        android:padding="6dp"
        android:layout_marginStart="4dp"/>

    <!-- 3. СКИНУТИ WI-FI (ЧЕРВОНА) -->
    <ImageButton
        android:id="@+id/btnItemWifiReset"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_wifi"
        android:contentDescription="@string/btn_reset_wifi"
        app:tint="?attr/dangerColor"
        android:padding="6dp"
        android:layout_marginStart="4dp"/>

    <!-- 4. ВИДАЛИТИ (ЧЕРВОНИЙ ХРЕСТИК) -->
    <ImageButton
        android:id="@+id/btnItemDelete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/dialog_delete_title"
        app:tint="?attr/dangerColor"
        android:padding="6dp"
        android:layout_marginStart="4dp"/>

</LinearLayout>
