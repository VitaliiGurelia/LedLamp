<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ЗАГОЛОВОК (Тепер без кнопки, просто по центру) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_title"
            android:textColor="?attr/mainTextColor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- 1. З'ЄДНАННЯ -->
        <LinearLayout
            android:id="@+id/menuConnection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_wifi"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_connection"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 2. НАЛАШТУВАННЯ ДОДАТКУ -->
        <LinearLayout
            android:id="@+id/menuAppSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_app_settings"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 3. ЕФЕКТИ -->
        <LinearLayout
            android:id="@+id/menuEffects"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_effects"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_effects"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 4. ЦИКЛ -->
        <LinearLayout
            android:id="@+id/menuCycle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cycle"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_cycle_mode"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 5. БУДИЛЬНИК -->
        <LinearLayout
            android:id="@+id/menuDawn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_dawn"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_dawn_alarm"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 6. ТАЙМЕР -->
        <LinearLayout
            android:id="@+id/menuTimer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_timer"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_sleep_timer"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 7. РОЗКЛАД -->
        <LinearLayout
            android:id="@+id/menuSchedule"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_schedule"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_schedule"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 8. МАЛЮВАННЯ -->
        <LinearLayout
            android:id="@+id/menuPainting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_paint"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_painting"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 9. ТЕКСТ (Нове!) -->
        <LinearLayout
            android:id="@+id/menuText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_text"
                app:tint="?attr/accentColor"/>
            <!-- Використайте ic_text (створіть) або ic_edit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_text"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>


        <!-- 10. МОВА -->
        <LinearLayout
            android:id="@+id/menuLanguage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_language"
                app:tint="?attr/accentColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_language"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- 10. ІНСТРУКЦІЯ -->
        <LinearLayout
            android:id="@+id/menuManual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- Використайте ic_info або існуючу іконку -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info"
                app:tint="?attr/accentColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/menu_manual"
                android:textColor="?attr/mainTextColor"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- РОЗДІЛЮВАЧ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp"/>

        <!-- НОВА КНОПКА "НАЗАД" ВНИЗУ -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/btn_back"
            android:backgroundTint="?attr/panelColor"
            android:textColor="?attr/mainTextColor"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>