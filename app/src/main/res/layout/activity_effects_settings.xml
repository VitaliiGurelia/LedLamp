<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/appBackground"
    android:padding="20dp">

    <!-- ЗАГОЛОВОК -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_effects"
        android:textColor="?attr/mainTextColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- СПИСОК ЕФЕКТІВ -->
    <!-- Тут будуть рядки з галочками та стрілками -->
    <ListView
        android:id="@+id/listEffectsPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/panelColor"
        android:layout_marginBottom="20dp"/>

    <!-- КНОПКА НАЗАД -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/btn_back"
        android:backgroundTint="?attr/panelColor"
        android:textColor="?attr/mainTextColor"/>

</LinearLayout>