<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSlotRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="6dp"
    android:background="@drawable/bg_item_slot_none"
    android:layout_marginBottom="6dp">

    <!-- Галочка активації -->
    <CheckBox
        android:id="@+id/checkSlotEnable"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:buttonTint="#FF4081"
        android:layout_marginEnd="4dp"/>

    <!-- Час -->
    <TextView
        android:id="@+id/textSlotTime"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="00:00"
        android:textColor="?attr/mainTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_panel"
        android:clickable="true"
        android:focusable="true"/>

    <View android:layout_width="8dp" android:layout_height="0dp"/>

    <!-- Перемикач On/Off -->
    <RadioGroup
        android:id="@+id/radioGroupAction"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioOn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/action_on"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_selector_on"/>

        <RadioButton
            android:id="@+id/radioOff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/action_off"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/bg_selector_off"/>
    </RadioGroup>

    <View android:layout_width="8dp" android:layout_height="0dp"/>

    <!-- Вибір ефекту -->
    <Spinner
        android:id="@+id/spinnerSlotEffect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/bg_panel"
        android:visibility="gone"/>

</LinearLayout>
