<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="?attr/elementBackground"
    android:layout_marginBottom="1dp">

    <!-- 1. Галочка (Вкл/Викл зі списку) -->
    <CheckBox
        android:id="@+id/checkVisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:buttonTint="?attr/accentColor"/>

    <!-- 2. Назва ефекту (Великий шрифт) -->
    <TextView
        android:id="@+id/textEffectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Effect Name"
        android:textColor="?attr/mainTextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:includeFontPadding="false"/>

    <!-- 3. Кнопка ВГОРУ -->
    <ImageButton
        android:id="@+id/btnMoveUp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_up"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/mainTextColor"
        android:padding="8dp"/>

    <!-- 4. Кнопка ВНИЗ -->
    <ImageButton
        android:id="@+id/btnMoveDown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_down"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/mainTextColor"
        android:padding="8dp"/>

</LinearLayout>